@model MotorcycleShowroom.Models.BMWPaginationModel

@{
    ViewData["Title"] = "Index";
}

<h1>BMW Index</h1>

<p>
    <a asp-action="Create" class="btn btn-white btn-wider btn-hover">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BMWs.FirstOrDefault().Motorcycles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BMWs.FirstOrDefault().Info)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BMWs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Motorcycles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-white btn-wider btn-hover">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-white btn-wider btn-hover">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-white btn-wider btn-hover">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }
        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
    </ul>
</nav>
